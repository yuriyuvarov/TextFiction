<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- LUCY - a vampiresque theme -->

	<color name="lucy.background">#000000</color>
	<color name="lucy.cmd_icon_tint">#1D2951</color>
	<color name="lucy.selected_fill">#1D2951</color>
	<color name="lucy.selected_border">#1D2951</color>
	<color name="lucy.prompt_input">#8A0707</color>
	<color name="lucy.pressed">#1D2951</color>
	<color name="lucy.text">#8A0707</color>
	<color name="lucy.prompt.hint">#1D2951</color>
	<color name="lucy.text.inverse">#8A0707</color>
	<color name="lucy.text.shadow">#771514</color>

	<style name="Lucy" parent="AppTheme">
		<item name="android:windowBackground">@color/lucy.background</item>
		<item name="android:colorBackground">@color/lucy.background</item>
		<item name="android:alertDialogStyle">@style/gingerbread_hack</item>
		<item name="bubble_left">@style/lucy_bubble_left</item>
		<item name="bubble_right">@style/lucy_bubble_right</item>
		<item name="bubble_none">@style/lucy_bubble_flash</item>
		<item name="cmdbox">@style/lucy_cmdbox</item>
		<item name="cmdbox_buttons">@style/lucy_cmdbox_buttons</item>
		<item name="storyboard">@style/lucy_storyboard</item>
		<item name="library_item">@style/lucy_library_item</item>
		<item name="library_item_text">@style/lucy_library_item_text</item>
		<item name="library_list">@style/lucy_library_list</item>
		<item name="upperwindow">@style/lucy_upperwindow</item>
		<item name="prompt">@style/lucy_prompt</item>
		<item name="loading">@style/lucy_loading</item>
	</style>

	<style name="lucy_loading">
		<item name="android:indeterminateDrawable">@drawable/lucy_loading</item>
	</style>

	<style name="lucy_cmdbox">
		<item name="android:background">@drawable/lucy_inputbox</item>
	</style>

	<style name="lucy_cmdbox_buttons">
		<item name="android:background">@drawable/lucy_btn_selector</item>
		<item name="android:tint">@color/lucy.cmd_icon_tint</item>
	</style>

	<style name="lucy_storyboard">
		<item name="android:divider">@null</item>
	</style>

	<style name="lucy_bubble_left">
		<item name="android:background">@drawable/lucy_bubble_left</item>
		<item name="android:layout_marginRight">@dimen/lucy.bubble_sidemargin</item>
		<item name="android:layout_marginTop">@dimen/lucy.bubble_topmargin</item>
		<item name="android:layout_gravity">left</item>
		<item name="android:textColor">@color/lucy.text</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>

	<style name="lucy_bubble_right">
		<item name="android:background">@drawable/lucy_bubble_right</item>
		<item name="android:layout_marginLeft">@dimen/lucy.bubble_sidemargin</item>
		<item name="android:layout_marginTop">@dimen/lucy.bubble_topmargin</item>
		<item name="android:layout_gravity">right</item>
		<item name="android:textColor">@color/lucy.text</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>

	<style name="lucy_bubble_flash">
		<item name="android:layout_gravity">center</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:typeface">monospace</item>
		<item name="android:textColor">@color/lucy.text.inverse</item>
		<item name="android:shadowColor">@color/lucy.text.shadow</item>
		<item name="android:shadowDx">2</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">2</item>
	</style>

	<style name="lucy_library_item">
		<item name="android:background">@drawable/lucy_box</item>
		<item name="android:textColor">@color/lucy.text</item>
	</style>

	<style name="lucy_library_item_text">
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:textColor">@color/lucy.text</item>
	</style>

	<style name="lucy_library_list">
		<item name="android:listSelector">@drawable/lucy_lst_selector</item>
		<item name="android:divider">@null</item>
	</style>

	<style name="lucy_upperwindow">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:typeface">monospace</item>
		<item name="android:textColor">@color/lucy.text.inverse</item>
		<item name="android:shadowColor">@color/lucy.text.shadow</item>
		<item name="android:shadowDx">2</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">2</item>
	</style>

	<style name="lucy_prompt">
		<item name="android:textColor">@color/lucy.prompt_input</item>
		<item name="android:textColorHint">@color/lucy.prompt.hint</item>
		<item name="android:background">@drawable/lucy_textfield_activated</item>
	</style>

</resources>